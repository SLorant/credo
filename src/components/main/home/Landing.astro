<script>
  import lottie from "lottie-web";

  const animationContainer = document.querySelector(
    "#lottie-animation",
  ) as HTMLElement;

  if (animationContainer) {
    // Load the Lottie animation
    const animation = lottie.loadAnimation({
      container: animationContainer,
      renderer: "svg",
      loop: false,
      autoplay: false,
      path: "/anim/data.json",
    });

    // Set different threshold based on viewport width
    const threshold =
      window.innerWidth <= 800 || window.innerHeight <= 800 ? 0.5 : 1;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            animationContainer.classList.remove("fade-out");
            // Restart the animation
            animation.goToAndStop(0, true);
            animation.play();
          } else {
            animationContainer.classList.add("fade-out");
          }
        });
      },
      {
        threshold: threshold,
      },
    );

    observer.observe(animationContainer);
  }
</script>
