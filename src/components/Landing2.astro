<script>
  import { animate, onScroll } from "animejs";

  const isMobile = window.innerWidth < 768;
  const isShortScreen = window.innerHeight < 800;
  const isSmallScreen = isMobile || isShortScreen;

  const getEnterValue = (desktopRem: number, mobileRem: number) => {
    if (isSmallScreen) return `bottom-=${mobileRem}rem top`;
    return `bottom-=${desktopRem}rem top`;
  };

  const animations = [
    { selector: ".first", enter: getEnterValue(25, 12.5) },
    { selector: ".second", enter: getEnterValue(28, 12.5) },
    { selector: ".animate-text", enter: getEnterValue(18.75, 12.5) },
    { selector: ".hover", enter: getEnterValue(12.5, 12.5) },
  ];

  if (isShortScreen) {
    animate(".mobileanim", {
      opacity: [0, 1],
      translateY: [30, 0],
      ease: "inOutSine",
      duration: 600,
      autoplay: onScroll({
        enter: "bottom-=100 top",
        leave: "top bottom",
        sync: "play reverse",
      }),
    });
  } else if (isMobile) {
    animate(".mobileanim", {
      opacity: [0, 1],
      translateY: [30, 0],
      ease: "inOutSine",
      duration: 600,
      autoplay: onScroll({
        enter: "bottom-=200 top",
        leave: "top bottom",
        sync: "play reverse",
      }),
    });
  } else {
    animations.forEach(({ selector, enter }) => {
      animate(selector, {
        opacity: [0, 1],
        translateY: [30, 0],
        ease: "inOutSine",
        duration: 600,
        autoplay: onScroll({
          enter,
          leave: "top bottom",
          sync: "play reverse",
        }),
      });
    });
  }
</script>

