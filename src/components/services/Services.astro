---
import ArrowButton from "../general/ArrowButton.astro";
import cardData from "./utils/cardData";
---

<div class="services-wrapper" id="services-wrapper">
  <div class="background"></div>

  <div class="services-container" id="uzletagak">
    {
      cardData.map((card) => (
        <div class="card" data-card={card.id}>
          <div class="info2">
            <h2 class="cardheader" id={card.title.split(" ")[1]}>
              {card.title}
            </h2>
            <button class="mobilebutton">
              <img src="/icons/arrowbutton.svg" alt="arrow" />
            </button>

            {card.items.length > 0 && (
              <div class="list-wrapper">
                <ul class="card-list">
                  {card.items.map((item) => (
                    <li>
                      <span>
                        <img class="listicon" src={item.icon} alt="list icon" />
                      </span>
                      {item.text}
                    </li>
                  ))}
                </ul>
                <div class="overlay-box">
                  <button class="close-button" aria-label="Close">
                    ×
                  </button>
                  <h2 class="cardheader">{card.title}</h2>
                  <button class="mobile-close-button" aria-label="Close">
                    <img src="/icons/arrowbutton.svg" alt="close" />
                  </button>
                  <p class="infotext" set:html={card.infotext} />
                </div>
              </div>
            )}
            <div class="btcont">
              <button class="toggle-button">Bővebben</button>
              <a href={`/munkaink?filter=${card.title.split(" ")[1]}`}>
                <button class="link-button">KAPCSOLÓDÓ MUNKÁINK</button>
              </a>
            </div>
          </div>
          <div class="cardimgbox">
            <img
              class="cardimg mobileimg"
              src={card.mobileImage}
              alt={card.title}
            />
            <img class="cardimg desktopimg" src={card.image} alt={card.title} />
            <img class="cardimgtop" src={card.imageTop} alt={card.title} />
          </div>
        </div>
      ))
    }
  </div>
</div>

<script>
  import { cardAnimations } from "./utils/cardAnimations";
  import { imageAnimations } from "./utils/imageAnimations";
  import { handleButtons } from "./utils/handleButtons";
  import cardData from "./utils/cardData";

  cardAnimations();

  imageAnimations();

  handleButtons();

  // Hide background when Contact section is in view
  const background = document.querySelector(".background") as HTMLElement;
  const contactSection = document.getElementById("kapcsolat");

  // Handle anchor links to specific cards
  function scrollToCard() {
    const hash = window.location.hash.substring(1); // Remove the # symbol
    if (!hash) return;

    // Find the card index that matches the hash
    const cardIndex = cardData.findIndex((card) => {
      const cardId = card.title.split(" ")[1];
      return cardId === hash;
    });

    if (cardIndex === -1) return;

    // Wait for layout to be ready
    setTimeout(() => {
      const wrapper = document.getElementById("services-wrapper");
      if (!wrapper) return;

      const totalCards = cardData.length;
      const wrapperHeight = wrapper.offsetHeight;
      const viewportHeight = window.innerHeight;

      // Calculate the scroll position for the desired card
      // Each card takes up 1/totalCards of the scroll distance
      const progressPerCard = 1 / totalCards;
      const targetProgress =
        cardIndex * progressPerCard + progressPerCard * 0.4; // Show card in the middle of its animation

      // Calculate total scrollable distance
      const startThreshold =
        viewportHeight >= 800 ? viewportHeight * 0.6 : viewportHeight * 0.65;
      const totalScrollDistance =
        wrapperHeight - viewportHeight + startThreshold;

      // Calculate the absolute scroll position
      const targetScrollInWrapper = targetProgress * totalScrollDistance;
      const wrapperTop = wrapper.offsetTop;
      const targetScrollPosition =
        wrapperTop + targetScrollInWrapper - viewportHeight * 0.2;

      // Smooth scroll to the position
      window.scrollTo({
        top: targetScrollPosition,
        behavior: "smooth",
      });
    }, 300);
  }

  // Run on page load
  scrollToCard();

  // Also run when hash changes (for navigation within the same page)
  window.addEventListener("hashchange", scrollToCard);
</script>

