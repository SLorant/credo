  }

  .list-wrapper {
    position: relative;
  }

  ul.card-list {
    list-style-type: none;
    gap: 20px;
    display: flex;
    flex-direction: column;
    padding-inline-start: 10px;
    padding-inline-end: 80px;
  }

  li {
    font-family: "AktivGrotesk Regular";
    font-size: 12pt;
    text-transform: uppercase !important;
    display: flex;
    justify-content: start;
    place-items: center;
    gap: 20px;
  }

  .overlay-box {
    position: absolute;
    top: 0;
    left: 0;
    width: 90%;
    height: 100%;
    /*     background: #4e8a67;
    background: linear-gradient(
      180deg,
      rgba(78, 138, 103, 1) 0%,
