---
const options = [
  "PPC Kampánykezelés",
  "Email marketing",
  "Stratégiai tanácsadás",
  "Arculattervezés",
  "Szövegírás",
  "Közösségi média menedzsment",
  "Weboldal fejlesztés",
  "Imázsfotózás",
  "Videó-produkció",
  "Egyéb",
];

const { needGradient } = Astro.props;
---

<div class="contcont">
  {needGradient ? <div class="topgradient" /> : null}
  <div class="container" id="kapcsolat">
    <img class="wearecredo" src="/icons/wearecredo.png" alt="we are credo" />
    <div class="contactbg"></div>
    <div class="contactbox" id="contactbox">
      <h2 class="contactheader">Lépj velünk kapcsolatba!</h2>
      <p class="subheader">
        Kapcsolatfelvétel. Megbeszélés. Ajánlattervezés. Rendszerépítés.
        Megvalósítás. Eredmény. <span>Ez a sorrend nálunk.</span>
      </p>
      <div class="options" id="options-container">
        {
          options.map((opt) => (
            <div class="optionbox" data-option={opt}>
              {opt}
            </div>
          ))
        }
      </div>
      <form class="contact-form" id="contact-form">
        <input type="hidden" name="selectedOptions" id="selected-options" />
        <div class="form-row">
          <input
            type="text"
            name="name"
            placeholder="Név"
            class="form-input"
            required
          />
          <input
            type="text"
            name="company"
            placeholder="Cégnév"
            class="form-input"
            required
          />
        </div>
        <div class="form-row">
          <input
            type="tel"
            name="phone"
            placeholder="Telefonszám"
            class="form-input"
            required
          />
          <input
            type="email"
            name="email"
            placeholder="E-mail cím"
            class="form-input"
            required
          />
        </div>
        <div class="form-row">
          <textarea
            name="message"
            placeholder="Üzenet"
            class="form-input"
            required></textarea>
        </div>
        <button type="submit" class="submit-button">KÜLDÉS</button>
        <div id="form-message" class="form-message"></div>
      </form>
    </div>
    <div class="contactfooter">
      <div class="contacticons">
        <a
          href="https://www.linkedin.com/company/credo-digital-agency"
          target="_blank"
          ><img class="icon2" src="/icons/linkedin.svg" alt="linkedin" /></a
        >
        <a
          href="https://www.facebook.com/people/Credo-Digital/61577578687092/#"
          target="_blank"
          ><img class="icon2" src="/icons/facebook.svg" alt="facebook" /></a
        >
        <a href="https://www.instagram.com/weare_credo/" target="_blank"
          ><img class="icon2" src="/icons/instagram.svg" alt="instagram" /></a
        >
      </div>
      <div class="iii">
        <a href="mailto:hello@credodigital.hu">hello@credodigital.hu</a>
        <p class="copy">Copyright © 2026 Credo Digital</p>
        <a href="/adatkezeles/">Adatkezelési szabályzat</a>
      </div>
    </div>
  </div>
</div>
<style>
  .contcont {
    position: relative;
    overscroll-behavior-y: none;
  }
  .copy {
    margin: 0;
  }
  .container {
    height: 1000px;
    width: 100vw;
    background: #2b2a33;
    background: radial-gradient(
      circle,
      rgba(43, 42, 51, 1) 0%,
      rgba(0, 0, 0, 1) 86%
    );
    display: flex;
    flex-direction: column;
    justify-content: center;
    place-items: center;
    font-family: "AktivGrotesk Light";
    color: white;
    position: relative;
    z-index: 20;
    padding-bottom: 0%;
    overflow: hidden;
    overscroll-behavior-y: none;
  }
  .contactbox {
    z-index: 30;
    width: 75%;
    height: 700px;
    border-radius: 30px;
    margin-top: 150px;
    padding-top: 20px;
    overflow: hidden;
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    background: rgb(255 255 255 / 0.05);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    place-items: center;
    border: 2px solid white;
    box-shadow:
      0 10px 15px -3px rgb(0 0 0 / 0.1),
      0 4px 6px -4px rgb(0 0 0 / 0.1);
    margin-bottom: 120px;
    padding-bottom: 30px;
  }
  .contactheader {
    font-family: "Kepler";
    font-size: 80pt;
    font-weight: 400;
    letter-spacing: 0px;
    letter-spacing: -5px;

    margin: 0;
  }
  .contactbg {
    position: absolute;
    bottom: -30px;
    left: 0;
    width: 110vw;
    height: 200px;
    background: #000000;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 1) 100%
    );
    mix-blend-mode: multiply;
    opacity: 0.9;
    filter: blur(20px);
  }
  .subheader {
    margin-left: 0rem;
    line-height: 30px;
  }
  .subheader span {
    font-family: "AktivGrotesk Medium";
  }
  .options {
    display: flex;
    flex-wrap: wrap;
    gap: 20px 10px;
    padding-left: 180px;
    padding-right: 180px;
    margin-top: 20px;
    width: 75%;
    overflow: hidden;
  }
  .topgradient {
    position: absolute;
    top: -100px;
    right: 0;
    width: 100%;
    height: 20%;
    background: #25252b;
    background: linear-gradient(
      180deg,
      rgba(37, 37, 43, 0) 0%,
      rgba(39, 39, 46, 0.42) 17%,
      rgba(22, 22, 26, 0.56) 46%,
      rgba(22, 22, 26, 0.56) 59%,
      rgba(16, 16, 18, 0.42) 84%,
      rgba(0, 0, 0, 0) 100%
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 40;
  }
  .optionbox {
    padding: 8px 20px;
    border-radius: 30px;
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    /*   background: rgb(255 255 255 / 0.15); */
    color: white;
    display: flex;
    justify-content: center;
    place-items: center;
    border: 2px solid white;
    text-transform: uppercase;
    font-size: 10pt;
    cursor: pointer;
    transition: all 0.3s ease;
    user-select: none;
    font-family: "AktivGrotesk Regular";
  }
  a {
    text-decoration: none;
    color: white;
    display: flex;
    justify-content: center;
    place-items: center;
  }
  .optionbox:hover {
    background: rgb(255 255 255 / 0.1);
    transform: scale(1.05);
  }
  .optionbox.selected {
    background: #dbe120;
    color: #1c1b22;
    border-color: #dbe120;
  }
  .contact-form {
    width: 75%;
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .form-row {
    display: flex;
    gap: 40px;
    width: 100%;
  }
  .form-input {
    flex: 1;
    background: transparent;
    border: none;
    border-bottom: 2px solid white;
    color: white;
    padding: 5px 0;
    font-family: "AktivGrotesk Light";
    font-size: 12pt;
    outline: none;
    padding-left: 15px;
  }
  textarea.form-input {
    resize: vertical;
    min-height: 40px;
    max-height: 100px;
    overflow-y: auto;
  }
  .form-input::placeholder {
    color: rgba(255, 255, 255, 1);
  }
  .submit-button {
    align-self: flex-end;
    background: #dbe120;
    color: #1c1b22;
    border: none;
    border-radius: 50px;
    padding: 12px 80px;
    font-family: "AktivGrotesk Light";
    font-size: 12pt;
    text-transform: uppercase;
    cursor: pointer;
    margin-top: 30px;
    font-weight: 600;
    letter-spacing: 1px;
    box-shadow: 0 0 20px rgba(13, 10, 27, 0.5);
    transition: all 0.3s ease;
  }
  .submit-button:hover {
    transform: scale(1.03);
  }
  .form-message {
    font-size: 14pt;
    text-align: center;
    font-family: "AktivGrotesk Regular";
    opacity: 0;
    transition:
      opacity 0.3s ease,
      margin-top 0.3s ease;
    margin-top: 0;
  }
  .form-message.show {
    opacity: 1;
    margin-top: 20px;
  }
  .form-message.success {
    color: #37be68;
    text-shadow: 1px 1px #278f4d;
  }
  .form-message.error {
    color: #ef4444;
    text-shadow: 1px 1px #9b2a2a;
  }
  .wearecredo {
    position: absolute;
    bottom: -10px;
    right: -80px;
    width: 1000px;
  }
  .contactfooter {
    display: flex;
    justify-content: start;
    place-items: center;
    position: absolute;
    width: 100vw;
    bottom: 0;
    left: 0;
    color: white;
    font-size: 14pt;
    margin-bottom: 2rem;
    margin-left: 2rem;
    gap: 50px;
  }
  .contacticons {
    display: flex;
    gap: 10px;
  }
  .iii {
    display: flex;
    gap: 50px;
    font-size: 12pt;
    text-shadow: 1px 1px #858585;
  }
  @media (max-width: 1400px) {
    .contactbox {
      width: 90%;
    }
  }
  @media (max-width: 1200px) {
    .subheader {
      font-size: 10pt;
    }
    .contactheader {
      font-size: 60pt;
    }
    .optionbox {
      font-size: 8pt;
    }

    input {
      font-size: 8pt;
    }
    .contactfooter {
      font-size: 12pt;
      gap: 100px;
    }
    .iii {
      font-size: 10pt;
      gap: 50px;
    }
  }
  @media (max-width: 1000px) {
    .subheader {
      word-wrap: wrap;
      padding: 0px 100px;
    }
    .contactheader {
      font-size: 40pt;
    }
    .submit-button {
      padding: 12px 60px;
      font-size: 10pt;
      margin-top: 30px;
    }
    .optionbox {
      padding: 4px 10px;
      font-size: 8pt;
    }
    .contactfooter {
      font-size: 12pt;
      gap: 20px;
    }
    .iii {
      gap: 30px;
    }
  }
  @media (max-width: 768px) {
    .container {
      height: 900px;
    }
    .wearecredo {
      /*   display: none; */
      position: absolute;
      bottom: -10px;
      right: -60px;
      width: 100vw;
    }
    .contactbox {
      width: 100%;
      border-radius: 0;
      height: 100%;
      margin-top: 50px;
      background: none;
      border: none;
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
    }
    .contactheader {
      font-size: 25pt;
      letter-spacing: -2px;
    }
    .subheader {
      word-wrap: wrap;
      padding: 0px 40px;
      font-size: 8pt;
      line-height: 25px;
      margin-top: 20px;
    }
    p span {
      display: block;
    }
    .options {
      gap: 12px 10px;
      padding-left: 100px;
      padding-right: 100px;
      margin-top: 20px;
      width: 80%;
      overflow: hidden;
    }
    .optionbox {
      padding: 4px 10px;
      font-size: 6pt;
      border: 1px solid white;
    }
    .contact-form {
      width: 75%;
      margin-top: 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .form-row {
      display: flex;
      flex-direction: column;
      gap: 20px;
      width: 100%;
    }
    .form-input {
      border-bottom: 1px solid white;
      padding: 5px 0;
      font-size: 9pt;
    }
    .submit-button {
      padding: 10px 60px;
      font-size: 9pt;
      margin-top: 10px;
    }
    .contactfooter {
      display: flex;
      justify-content: space-between;
      place-items: end;
      position: absolute;
      width: 85vw;
      bottom: 0;
      left: 0;
      color: white;
      font-size: 8pt;
      margin-bottom: 2rem;
      margin-left: 2rem;
      gap: 10px;
    }
    .topgradient {
      opacity: 1;
      height: 15%;
      top: -70px;
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
    }
    .contacticons {
      flex-direction: column;
      margin-bottom: 0rem;
    }
    .iii {
      flex-direction: column;
      gap: 15px;
      padding-right: 1rem;

      font-size: 10pt;
    }
    .contactbg {
      display: none;
    }
    textarea.form-input {
      min-height: 60px;
    }
    .form-message {
      font-size: 10pt;
    }
  }
</style>

<script>
  import { animate, onScroll } from "animejs";

  if (window.innerWidth < 768) {
    animate(".wearecredo", {
      opacity: [0, 0.2],
      translateY: [30, 0],
      ease: "inOutSine",
      duration: 2000,
      autoplay: onScroll({
        enter: "bottom-=0 top",
        leave: "top bottom",
        sync: "play reverse",
      }),
    });
  } else {
    animate(".wearecredo", {
      opacity: [0, 0.7],
      translateY: [30, 0],
      ease: "inOutSine",
      duration: 3000,
      autoplay: onScroll({
        enter: "bottom-=100 top",
        leave: "top bottom",
        sync: "play reverse",
      }),
    });
  }

  const form = document.getElementById("contact-form") as HTMLFormElement;
  const optionsContainer = document.getElementById("options-container");
  const selectedOptionsInput = document.getElementById(
    "selected-options"
  ) as HTMLInputElement;
  const selectedOptions = new Set<string>();

  // Handle option selection
  optionsContainer?.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    if (target.classList.contains("optionbox")) {
      const option = target.dataset.option;
      if (option) {
        if (selectedOptions.has(option)) {
          selectedOptions.delete(option);
          target.classList.remove("selected");
        } else {
          selectedOptions.add(option);
          target.classList.add("selected");
        }
        // Update hidden input
        selectedOptionsInput.value = Array.from(selectedOptions).join(", ");
      }
    }
  });

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = {
      name: formData.get("name") as string,
      company: formData.get("company") as string,
      phone: formData.get("phone") as string,
      email: formData.get("email") as string,
      message: formData.get("message") as string,
      selectedOptions: Array.from(selectedOptions),
    };

    // Disable submit button and show loading state
    const submitButton = form.querySelector(
      ".submit-button"
    ) as HTMLButtonElement;
    const originalText = submitButton.textContent;
    submitButton.disabled = true;
    submitButton.textContent = "KÜLDÉS...";

    try {
      const response = await fetch("/api/contact", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();
      const messageDiv = document.getElementById("form-message");

      if (response.ok) {
        if (messageDiv) {
          messageDiv.textContent =
            "Üzenet sikeresen elküldve! Hamarosan jelentkezünk.";
          messageDiv.className = "form-message show success";
          // Hide message after 5 seconds
          setTimeout(() => {
            messageDiv.classList.remove("show");
          }, 10000);
        }
        form.reset();
        // Clear selected options
        selectedOptions.clear();
        document.querySelectorAll(".optionbox.selected").forEach((el) => {
          el.classList.remove("selected");
        });
      } else {
        if (messageDiv) {
          messageDiv.textContent =
            "Hiba történt az üzenet küldése során. Kérjük, próbálja újra később.";
          messageDiv.className = "form-message show error";
          // Hide message after 5 seconds
          setTimeout(() => {
            messageDiv.classList.remove("show");
          }, 10000);
        }
      }
    } catch (error) {
      const messageDiv = document.getElementById("form-message");
      if (messageDiv) {
        messageDiv.textContent =
          "Hiba történt az üzenet küldése során. Kérjük, próbálja újra később.";
        messageDiv.className = "form-message show error";
        // Hide message after 5 seconds
        setTimeout(() => {
          messageDiv.classList.remove("show");
        }, 10000);
      }
      console.error("Form submission error:", error);
    } finally {
      // Re-enable submit button
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  });
</script>
