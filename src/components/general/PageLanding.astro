---
const { header1, header2, text, alternate, subText } = Astro.props;
---

<!-- <img src="/gradientmask.png" /> -->
<div class="container">
  <div class="mobileanim">
    {alternate ? <h2 class="subHeader">{subText}</h2> : null}
    <h1 class="first animate-header">{header1}</h1>
    <h1
      class={alternate ? "secondAlt animate-header" : "second animate-header"}
    >
      {header2}
    </h1>
    <p class="animate-text" set:html={text} />
  </div>
</div>

