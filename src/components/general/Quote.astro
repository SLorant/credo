---
const { text, author } = Astro.props;
---

<div class="quotecont">
  <img class="quote2" src="/illustrations/quote.svg" alt="quote" />
  <div class="box1">
    <p>
      {text}
    </p>
    <div class="auth">
      â€” {author}
    </div>
  </div>
</div>

<style>
  .quotecont {
    position: relative;
    width: 100%;
    max-width: 1200px;
  }
  .box1 {
    border-radius: 30px;
    margin-top: 100px;
    overflow: hidden;
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    background: rgb(255 255 255 / 0.05);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    place-items: center;
    border: 2px solid white;
    box-shadow:
      0 10px 15px -3px rgb(0 0 0 / 0.1),
      0 4px 6px -4px rgb(0 0 0 / 0.1);
    margin-bottom: 20px;
    padding: 3rem 10rem;
    padding-bottom: 4rem;
    text-align: center;
    text-wrap: pretty;
    position: relative;
    z-index: 30;
  }
  .box1 p {
    line-height: 1.7rem;
  }
  .auth {
    text-align: right;
    width: 100%;
    margin-top: 20px;
    margin-right: 10px;
    text-transform: uppercase;
  }
  .quote2 {
    position: absolute;
    top: -15%;
    left: -2%;
    width: 30%;
    height: auto;
    z-index: 20;
  }
  @media (max-width: 1300px) {
    .box1 {
      padding: 3rem 8rem;
    }
    .quotecont {
      position: relative;
      width: 100%;
      max-width: 1000px;
    }

    .box1 p {
      font-size: var(--text-base);
      line-height: 1.6rem;
    }
  }
  @media (max-width: 1050px) {
    .box1 {
      padding: 3rem 4rem;
    }
    .quote2 {
      width: 50%;
    }
    .quotecont {
      position: relative;
      width: 100%;
      max-width: 700px;
    }
    .box1 p {
      font-size: var(--text-sm);
      line-height: 1.4rem;
    }
  }
  @media (max-width: 768px) {
    .box1 {
      padding: 2rem 2rem;
    }
    .auth {
      text-align: right;
      width: 100%;
      margin-top: 10px;
      margin-right: 20px;
      font-size: var(--text-sm);
    }
    .quote2 {
      position: absolute;
      top: -10%;
      left: -2%;
      width: 70%;
      height: auto;
      z-index: 20;
    }
  }
</style>
