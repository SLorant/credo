<div class="container">
  <img class="gif" src="landing3.gif" alt="We are credo" />
  <div class="footer">
    <p>hello@credodigital.hu</p>
    <div class="icons">
      <img class="icon" src="icons/linkedin.svg" alt="linkedin" />
      <img class="icon" src="icons/facebook.svg" alt="facebook" />
      <img class="icon" src="icons/instagram.svg" alt="instagram" />
    </div>
  </div>
</div>

<style>
  .container {
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: center;
    place-items: center;
    font-family: "AktivGrotesk Light";
    position: relative;
    z-index: 40;
  }
  .gif {
    width: 75%;
    margin-bottom: 5%;
    pointer-events: none;
    opacity: 1;
    transition: opacity 0.6s ease-in-out;
  }
  .gif.fade-out {
    opacity: 0;
  }
  .icons {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-right: 4rem;
    margin-bottom: 1rem;
  }
  .icon {
    width: 25px;
  }
  .footer {
    display: flex;
    justify-content: space-between;
    place-items: end;
    position: fixed;
    width: 100vw;
    bottom: 0;
    left: 0;
    color: white;
    font-size: 14pt;
    margin-bottom: 2rem;
  }
  p {
    margin-left: 4rem;
    line-height: 0;
  }
</style>

<script>
  const gif = document.querySelector(".gif");

  if (gif) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            gif.classList.remove("fade-out");
          } else {
            gif.classList.add("fade-out");
          }
        });
      },
      {
        threshold: 1,
      }
    );

    observer.observe(gif);
  }
</script>
