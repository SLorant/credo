<script>
  const video = document.querySelector(".video-animation") as HTMLVideoElement;
  const img = document.querySelector(".image-animation") as HTMLImageElement;

  // Detect if browser supports WebM with alpha channel
  const supportsWebMAlpha = () => {
    const video = document.createElement("video");
    return (
      video.canPlayType('video/webm; codecs="vp8,vorbis"') !== "" ||
      video.canPlayType('video/webm; codecs="vp9"') !== ""
    );
  };

  let activeElement: HTMLVideoElement | HTMLImageElement | null = null;

  if (supportsWebMAlpha() && video) {
    // Use WebM video
    video.style.display = "block";
    if (img) img.style.display = "none";
    activeElement = video;
  } else if (img) {
    // Fallback to APNG/image
    if (video) video.style.display = "none";
    img.style.display = "block";
    activeElement = img;
  }

  if (activeElement) {
    // Set different threshold based on viewport width
    const threshold = window.innerWidth <= 800 ? 0.5 : 1;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            activeElement!.classList.remove("fade-out");

            // Restart video from beginning when scrolling back into view
            if (activeElement instanceof HTMLVideoElement) {
              activeElement.currentTime = 0;
              activeElement
                .play()
                .catch((err) => console.log("Video play failed:", err));
            } else if (activeElement instanceof HTMLImageElement) {
              // For APNG: force reload by resetting src
              const currentSrc = activeElement.src;
              activeElement.src = "";
              activeElement.src = currentSrc;
            }
          } else {
            activeElement!.classList.add("fade-out");
            // Pause video when out of view to save resources
            if (activeElement instanceof HTMLVideoElement) {
              activeElement.pause();
            }
          }
        });
      },
      {
        threshold: threshold,
      }
    );

    observer.observe(activeElement);
  }
</script>
