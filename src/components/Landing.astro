<script>
  const gif = document.querySelector(".gif") as HTMLImageElement;

  if (gif) {
    // Set different threshold based on viewport width
    const threshold = window.innerWidth <= 800 ? 0.5 : 1;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            gif.classList.remove("fade-out");
            // Force GIF to restart by reloading it
            const currentSrc = gif.src;
            gif.src = "";
            gif.src = currentSrc;
          } else {
            gif.classList.add("fade-out");
          }
        });
      },
      {
        threshold: threshold,
      }
    );

    observer.observe(gif);
  }
</script>
