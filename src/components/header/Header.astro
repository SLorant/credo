<style>
  nav {
    display: flex;
    justify-content: space-between;
    place-items: center;
    position: fixed;
    width: 100vw;
    top: 0;
    left: 0;
    color: white;
    font-size: var(--text-lg);
    margin-top: 1rem;
    z-index: 50;
  }
  .contact {
    /*   border: 1px solid white;
    border-radius: 10px;
    padding: 0px 8px; */
    border-bottom: #dbe120 2px solid;
    padding-bottom: 1px;
  }
  .navbg {
    position: absolute;
    top: -30px;
    left: 0;
    width: 110vw;
    height: 120px;
    background: #000000;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
    mix-blend-mode: multiply;
    opacity: 0.9;
    filter: blur(20px);
  }
  .icons {
    display: none;
  }
  ul {
    list-style-type: none;
    display: flex;
    gap: 2rem;
    margin-right: 4rem;
    z-index: 50;
  }
  .logo {
    width: 100px;
    margin-left: 4rem;
    margin-bottom: 5px;
    position: relative;
  }
  li {
    font-family: "AktivGrotesk Light";
  }
  a {
    text-decoration: none;
    color: white;
    display: inline-block;
    transition: all;
    transition-duration: 200ms;
  }
  a:hover {
    color: #dbe120;
    transform: scale(1.1);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 50;
    margin-right: 4rem;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background-color: white;
    margin: 3px 0;
    transition: 0.3s;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
    background-color: rgba(28, 27, 34, 0.5);
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }

  .mobile-menu.active {
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-logo {
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    width: 100px;
    margin: 0;
    opacity: 1;
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    right: 2rem;
    background: none;
    border: none;
    color: white;
    font-size: 3rem;
    font-family: "AktivGrotesk Light";
    cursor: pointer;
    z-index: 101;
    padding: 0;
    line-height: 1;
  }

  .close-btn:hover {
    color: #dbe120;
  }

  .mobile-nav {
    list-style-type: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
  }

  .mobile-nav li {
    font-family: "AktivGrotesk Light";
    font-size: var(--text-lg);
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
  }

  .mobile-menu.active .mobile-nav li:nth-child(1) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .mobile-menu.active .mobile-nav li:nth-child(2) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.2s;
  }

  .mobile-menu.active .mobile-nav li:nth-child(3) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
  }

  .mobile-menu.active .mobile-nav li:nth-child(4) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.4s;
  }

  .mobile-nav a {
    text-decoration: none;
    color: white;
    transition: all 0.4s;
  }

  .mobile-nav a:hover {
    color: #dbe120;
  }

  @media (max-width: 1000px) {
    nav {
      font-size: var(--text-base);
    }
  }

  @media (max-height: 500px) {
    nav {
      font-size: var(--text-base);
    }
    .logo2 {
      margin-left: 2rem !important;
    }
  }

  @media (max-width: 768px) {
    ul {
      display: none;
    }

    .hamburger {
      display: flex;
    }

    .close-btn {
      right: 2rem;
    }

    .logo2 {
      margin-left: 2rem !important;
      margin-top: 0.5rem;
    }
    .icons {
      position: absolute;
      bottom: 3rem;
      display: flex;
      justify-content: center;
      place-items: center;
      gap: 20px;
      margin-left: 0rem !important;
      margin-top: 0rem !important;
      width: 50%;
    }
    .icon {
      width: 35px;
    }

    .mobile-logo {
      left: -2rem;
    }

    .hamburger {
      margin-right: 2rem;
    }
  }
</style>

<script>
  const hamburger = document.getElementById("hamburger");
  const mobileMenu = document.getElementById("mobile-menu");
  const closeBtn = document.getElementById("close-menu");
  const mobileLinks = document.querySelectorAll(".mobile-nav a");
  const mobileLogo = document.querySelector(".mobile-logo");
  const desktopLogo = document.querySelector("nav a[href='/']");

  // Handle desktop logo click
  desktopLogo?.addEventListener("click", (e) => {
    if (window.location.pathname === "/") {
      e.preventDefault();
      window.scrollTo({ top: 0, behavior: "smooth" });
      // Clean the URL by removing any hash
      history.replaceState(null, "", "/");
    }
  });

  // Handle mobile logo click
  mobileLogo?.addEventListener("click", (e) => {
    if (window.location.pathname === "/") {
      e.preventDefault();
      window.scrollTo({ top: 0, behavior: "smooth" });
      // Clean the URL by removing any hash
      history.replaceState(null, "", "/");
    }
    mobileMenu?.classList.remove("active");
    document.body.style.overflow = "";
  });

  hamburger?.addEventListener("click", () => {
    mobileMenu?.classList.add("active");
    document.body.style.overflow = "hidden";
  });

  closeBtn?.addEventListener("click", () => {
    mobileMenu?.classList.remove("active");
    document.body.style.overflow = "";
  });

  // Close menu when clicking on a link
  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.remove("active");
      document.body.style.overflow = "";
    });
  });

  // Handle cross-page navigation to prevent smooth scrolling
  // When navigating from a different page, disable smooth scroll temporarily
  document.addEventListener("DOMContentLoaded", () => {
    // Check if there's a hash in the URL
    if (window.location.hash) {
      // Disable smooth scrolling temporarily
      document.documentElement.style.scrollBehavior = "auto";

      // Jump to the target immediately
      const target = document.querySelector(window.location.hash);
      if (target) {
        target.scrollIntoView();
      }

      // Re-enable smooth scrolling after a short delay for future same-page navigation
      setTimeout(() => {
        document.documentElement.style.scrollBehavior = "smooth";
      }, 100);
    }
  });

  // Close menu when clicking outside
  /* mobileMenu?.addEventListener("click", (e) => {
    if (e.target === mobileMenu) {
      mobileMenu.classList.remove("active");
      document.body.style.overflow = "";
    }
  }); */
</script>
