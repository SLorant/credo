<style>
  nav {
    display: flex;
    justify-content: space-between;
    place-items: center;
    position: fixed;
    width: 100vw;
    top: 0;
    left: 0;
    color: white;
    font-size: 14pt;
    margin-top: 1rem;
    z-index: 50;
  }
  .navbg {
    position: absolute;
    top: -30px;
    left: 0;
    width: 110vw;
    height: 120px;
    background: #000000;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
    mix-blend-mode: multiply;
    opacity: 0.9;
    filter: blur(20px);
  }
  .icons {
    display: none;
  }
  ul {
    list-style-type: none;
    display: flex;
    gap: 2rem;
    margin-right: 4rem;
    z-index: 50;
  }
  .logo {
    width: 100px;
    margin-left: 4rem;
    margin-bottom: 5px;
    position: relative;
  }
  li {
    font-family: "AktivGrotesk Light";
  }
  a {
    text-decoration: none;
    color: white;
    transition: all;
    transition-duration: 400ms;
  }
  a:hover {
    color: #dbe120;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 50;
    margin-right: 4rem;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background-color: white;
    margin: 3px 0;
    transition: 0.3s;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    backdrop-filter: blur(40px);
    background-color: rgba(28, 27, 34, 0.5);
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }

  .mobile-menu.active {
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-logo {
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    width: 100px;
    margin: 0;
    opacity: 1;
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    right: 2rem;
    background: none;
    border: none;
    color: white;
    font-size: 3rem;
    font-family: "AktivGrotesk Light";
    cursor: pointer;
    z-index: 101;
    padding: 0;
    line-height: 1;
  }

  .close-btn:hover {
    color: #dbe120;
  }

  .mobile-nav {
    list-style-type: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
  }

  .mobile-nav li {
    font-family: "AktivGrotesk Light";
    font-size: 14pt;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
  }

  .mobile-menu.active .mobile-nav li:nth-child(1) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .mobile-menu.active .mobile-nav li:nth-child(2) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.2s;
  }

  .mobile-menu.active .mobile-nav li:nth-child(3) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
  }

  .mobile-menu.active .mobile-nav li:nth-child(4) {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.4s;
  }

  .mobile-nav a {
    text-decoration: none;
    color: white;
    transition: all 0.4s;
  }

  .mobile-nav a:hover {
    color: #dbe120;
  }

  @media (max-width: 1000px) {
    nav {
      font-size: 10pt;
    }
  }

  @media (max-width: 768px) {
    ul {
      display: none;
    }

    .hamburger {
      display: flex;
    }

    .close-btn {
      right: 2rem;
    }

    .logo2 {
      margin-left: 2rem !important;
      margin-top: 0.5rem;
    }
    .icons {
      position: absolute;
      bottom: 3rem;
      display: flex;
      justify-content: center;
      place-items: center;
      gap: 20px;
      margin-left: 0rem !important;
      margin-top: 0rem !important;
      width: 50%;
    }
    .icon {
      width: 35px;
    }

    .mobile-logo {
      left: 2rem;
    }

    .hamburger {
      margin-right: 2rem;
    }
  }
</style>

<script>
  const hamburger = document.getElementById("hamburger");
  const mobileMenu = document.getElementById("mobile-menu");
  const closeBtn = document.getElementById("close-menu");
  const mobileLinks = document.querySelectorAll(".mobile-nav a, a .logo");

  hamburger?.addEventListener("click", () => {
    mobileMenu?.classList.add("active");
    document.body.style.overflow = "hidden";
  });

  closeBtn?.addEventListener("click", () => {
    mobileMenu?.classList.remove("active");
    document.body.style.overflow = "";
  });

  // Close menu when clicking on a link
  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.remove("active");
      document.body.style.overflow = "";
    });
  });

  // Close menu when clicking outside
  /* mobileMenu?.addEventListener("click", (e) => {
    if (e.target === mobileMenu) {
      mobileMenu.classList.remove("active");
      document.body.style.overflow = "";
    }
  }); */
</script>
